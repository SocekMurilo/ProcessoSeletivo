                        <li><b>Desafio 2: </b> 84</li>
                        <li><b>Observações</b>     
                          <ul>
                            <li>segundo item segundo subitem primeiro sub-subitem</li>
                            <li>segundo item segundo subitem segundo sub-subitem</li>
                            <li>segundo item segundo subitem terceiro sub-subitem</li>
                          </ul>
                        </li>           
                        <li><b>Desafio extra: </b>68</li>
                      </ul>
                    </li>              
                    <li><b>Entrevista</b> 
                        <ul>
                            <li><b>Observações:</b> </li>
                        </ul>
                    </li>
                  </ul>
                  
                </div>
              </div>
              <% }) %>

            <hr>

          
              <div class="font2">Informações extras</div> 
              <ul>
                <li><b>Curriculo:</b> <a href="" class="link"><%= participante.Curriculo %></a> </li>
                <li><b>Vídeo:</b> <a href="" class="link"><%= participante.Video %></a> </li>
              </ul>
              
            </div>
            
            <br>
      

      

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
