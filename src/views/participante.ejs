      <div style="margin-left: 60px; margin-right: 60px;">

        <h1 class="font">Página do participante</h1>
        <div class="alert alert-light d-flex flex-column align-items-start" role="alert">
          <div><b>Nome Completo:</b> <%= participante.Nome %></div>
          <div><b>Idade: </b> <%= participante.Idade %></div> 
          <div><b>Email: </b> <%= participante.Email %></div>
          <div><b>Telefone: </b> <%= participante.Telefone %></div>
          <div><b>Cursos: </b> <%= participante.Cursos %></div>
          <div><b>Idiomas: </b> <%= participante.Idiomas %></div>
        </div>
        <hr>
        
        

