<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grupos</title>
    <!-- Icone -->
    <link rel="icon" type="image/x-icon"
        href="https://static-00.iconduck.com/assets.00/bosch-icon-512x512-er2htt2a.png" />
    <!-- Bootstrap e CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/style.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <!-- Fontes -->
    <link href="//db.onlinewebfonts.com/c/6e96217a04da19fc61e0c2724049e53e?family=Neology-Bold" rel="stylesheet"
        type="text/css" />
</head>

<body>
    <div class="hr"></div>
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid containerNav">
            <a class="navbar-brand" href="/">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/16/Bosch-logo.svg/2560px-Bosch-logo.svg.png"
                    alt="Logo" width="150" height="33" class="d-inline-block align-text-top" />
            </a>
            <div class="d-flex justify-content-end">
                <div class="dropdown" style="z-index: 100">
                    <a href class="margin dropdown-toggle link" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-person-circle" viewBox="0 0 16
                                    16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6
                                        0z" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0
                                            1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0
                                            0-5.468 11.37C3.242 11.226 4.805 10
                                            8 10s4.757 1.225 5.468 2.37A7 7 0 0
                                            0 8 1z" />
                        </svg>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Logout">Sair</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <br />

    <div style="margin-left: 60px; margin-right: 60px">
        <h1 class="font">Grupos</h1>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <% for (let i=processosComEtapas.length - 1; i> -1; i--) { %>
                    <div id="primeiro-select">
                        <input type="hidden" id="indiceEtapaSelecionada<%= i %>" value="0">
                        <select id="etapa<%= i %>-<%= processosComEtapas[i].IDProcesso %>"
                            data-idProcesso=" <%=processosComEtapas[i].IDProcesso %>" class="form-select select-etapa"
                            onchange="exibirParticipantes(this)">
                            <% for (let j=0; j < processosComEtapas[i].etapas.length; j++) { %>
                                <option value="etapa<%= j %>-<%= processosComEtapas[i].IDProcesso %>"
                                    data-index="<%= j %>">
                                    <%= processosComEtapas[i].etapas[j].Nome %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <br />

                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <div class="col">
                            <div class="card medias">
                                <h5 class="card-header d-flex justify-content-between">Grupo 1
                                    <div class="margin notagrupo" id="Media1"></div>
                                </h5>
                                <div class="card-body grupo dia1"></div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card medias">
                                <h5 class="card-header d-flex justify-content-between">Grupo 2
                                    <div class="margin notagrupo" id="Media2"></div>
                                </h5>
                                <div class="card-body grupo dia1"></div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card medias">
                                <h5 class="card-header d-flex justify-content-between">Grupo 3
                                    <div class="margin notagrupo" id="Media3"></div>
                                </h5>
                                <div class="card-body grupo dia1"></div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card medias">
                                <h5 class="card-header d-flex justify-content-between">Grupo 4
                                    <div class="margin notagrupo" id="Media4"></div>
                                </h5>
                                <div class="card-body grupo dia1"></div>
                            </div>
                        </div>
                    </div>
            </div>

            <div class="col">
                <div class="card cardParticipantes">
                    <h5 class="card-header">Participantes</h5>
                    <div class="card-body grupo" id="participantes-list">
                            <% processosComEtapas[i].participantes.forEach(participante=> { %>
                                <% if (participante.IDProcesso===processosComEtapas[i].IDProcesso) { %>
                                    <div class="participeites alert alert-grupo alert-light justify-content-between align-items-center participante dadosParticipante" role="alert"
                                    draggable="true" data-status="<%= participante.Status %>" style="display: flex;">
                                        <%= participante.Nome %>
                                        <div class="ms-auto d-flex align-items-center">
                                            <% for (let i=0; i < participantes.length; i++) { if
                                              (participantes[i].IDParticipante===participante.IDParticipante) { %>
                                                <div style="margin-left: auto;" class="nota d-flex">
                                              <%= nota[i].Nota %>
                                                <% } } %>
                                                </div>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-grip-vertical" viewBox="0 0 16 16">
                                                <path
                                                d="M7 2a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM7 5a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM7 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm-3 3a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm-3 3a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                                </svg>
                                            </div>
                                    </div>
                                    <% } %>
                                        <% }) %>
                    </div>
                </div>
                <% } %>
            </div>



        </div>
    </div>
    </div>
    </div>

    <script src="js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script>
        document.getElementById("dia").addEventListener("change", function () {
            var selectedValue = this.value;
            var cards = document.getElementsByClassName("card");

            // Ocultar todos os cards
            for (var i = 0; i < cards.length; i++) {
                cards[i].style.display = "none";
            }

            // Mostrar os cards referentes ao dia selecionado ou todos
            if (selectedValue) {
                var cardsDiaSelecionado = document.getElementsByClassName(
                    "grupo " + selectedValue
                );
                for (var i = 0; i < cardsDiaSelecionado.length; i++) {
                    var card = cardsDiaSelecionado[i].closest(".card");
                    card.style.display = "block";
                }
            } else {
                // Mostrar todos os cards
                for (var i = 0; i < cards.length; i++) {
                    cards[i].style.display = "block";
                }
            }
        });
    </script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.14.0/Sortable.min.js"></script>
    <script src="/js/grupos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="/js/script.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>