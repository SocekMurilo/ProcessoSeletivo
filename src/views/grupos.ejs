    <script>
        document.getElementById('dia').addEventListener('change', function () {
            var selectedValue = this.value;
            var cards = document.getElementsByClassName('card');

            // Ocultar todos os cards
            for (var i = 0; i < cards.length; i++) {
                cards[i].style.display = 'none';
            }

            // Mostrar os cards referentes ao dia selecionado ou todos
            if (selectedValue) {
                var cardsDiaSelecionado = document.getElementsByClassName('grupo ' + selectedValue);
                for (var i = 0; i < cardsDiaSelecionado.length; i++) {
                    var card = cardsDiaSelecionado[i].closest('.card');
                    card.style.display = 'block';
                }
            } else {
                // Mostrar todos os cards
                for (var i = 0; i < cards.length; i++) {
                    cards[i].style.display = 'block';
                }
            }
        });
    </script>
