                  <input type="checkbox" class="btn-check" id="btn-check-filter" autocomplete="off">
<label class="btn btn-primary" id="btnCheckFilterLabel" for="btn-check-filter">Estado Inicial</label>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
$(document).ready(function() {
  var state = 1;
  var labelStates = [
    { id: 1, label: "Estado Inicial", checked: true },
    { id: 2, label: "Label 2", checked: false },
    { id: 3, label: "Label 3", checked: false }
  ];

  $("#btn-check-filter").click(function() {
    state = (state % 3) + 1;
    var label = $("#btnCheckFilterLabel");

    label.text(labelStates[state - 1].label);
    $(this).prop("checked", labelStates[state - 1].checked);

    // Aqui você pode enviar o estado para o servidor para salvar no banco de dados
    var selectedState = labelStates[state - 1].id;
    saveStateToDatabase(selectedState);
  });

  function saveStateToDatabase(selectedState) {
    // Código para enviar o estado selecionado para o servidor e salvar no banco de dados
    // Você pode usar uma requisição AJAX para enviar os dados para o servidor
    // Exemplo:
    /*
    $.ajax({
      url: "salvar_estado.php",
      method: "POST",
      data: { state: selectedState },
      success: function(response) {
        console.log("Estado salvo no banco de dados com sucesso.");
      },
      error: function() {
        console.log("Erro ao salvar o estado no banco de dados.");
      }
    });
    */
  }
});
</script>
